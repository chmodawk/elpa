#!/bin/bash

set -e

echo ">>> Syncing MELPA Stable <$( date +"%Y-%m-%d %H:%M:%S %Z" )>..."

rsync -avz --delete --chmod=Du=rwx,Dg=rx,Do=rx,Fu=rw,Fg=r,Fo=r rsync://melpa.org/packages-stable/ /var/elpa-packages/melpa-stable
rsync -av /var/elpa-packages/melpa-stable/ /var/elpa/melpa-stable

echo ">>> Done <$( date +"%Y-%m-%d %H:%M:%S %Z" )>"
